<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class= "table table-hoover">
  <thead class>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Blog Post Length</th>
      <th> Blog post word count</th>
      <th>User Email </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.body.length %> characters</td>
        <td><%= post.body.split.count %> Count </td>
          <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
